<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainActivityViewModel"
            type="com.dp.date_range.ui.viewmodel.MainActivityViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/currentBox"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textSize="5sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.3" />

            <Button
                android:id="@+id/previousButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_yellow"
                android:text="@string/previous"
                android:textSize="16sp" />

            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_yellow"
                android:text="@string/next"
                android:textSize="16sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_yellow"
            android:text="Submit"
            android:textSize="16sp" />
    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#4393f3"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:padding="1dp"
                        android:text="Daily Sale"
                        android:layout_margin="5dp"
                        android:textColor="#ccf1f8"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textAlignment="textStart" />
                    <TextView
                        android:id="@+id/dailyTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:padding="1dp"
                        android:text="₱ 0.0"
                        android:layout_margin="5dp"
                        android:textColor="#ccf1f8"
                        android:textSize="25dp"
                        android:textAlignment="center" />
                    <TextView
                        android:id="@+id/dailyDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="Date"
                        android:layout_margin="5dp"
                        android:textColor="#ccf1f8"
                        android:textStyle="italic"
                        android:textAlignment="textStart" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#a97df6"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="Weekly Sale"
                        android:layout_margin="5dp"
                        android:textColor="#ccf1f8"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textAlignment="textStart" />

                    <TextView
                        android:id="@+id/weeklyTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:padding="1dp"
                        android:text="₱ 0.0"
                        android:layout_margin="5dp"
                        android:textColor="#ccf1f8"
                        android:textSize="25dp"
                        android:textAlignment="center" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/weeklyNow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textAlignment="textStart"
                            android:textColor="#ccf1f8"
                            android:textStyle="italic" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp">

                        <TextView
                            android:id="@+id/weeklyTo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAlignment="textStart"
                            android:textColor="#ccf1f8"
                            android:textStyle="italic" />
                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#26d0c9"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:padding="1dp"
                    android:text="Monthly Sale"
                    android:layout_margin="5dp"
                    android:textColor="#ccf1f8"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAlignment="textStart" />
                <TextView
                    android:id="@+id/monthLyTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:padding="1dp"
                    android:text="₱ 0.0"
                    android:layout_margin="5dp"
                    android:textColor="#ccf1f8"
                    android:textSize="25dp"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/monthLyDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="Date"
                    android:layout_margin="5dp"
                    android:textColor="#ccf1f8"
                    android:textStyle="italic"
                    android:textAlignment="textStart" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff7ca6"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:padding="1dp"
                    android:text="Yearly Sale"
                    android:layout_margin="5dp"
                    android:textColor="#ccf1f8"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAlignment="textStart" />
                <TextView
                    android:id="@+id/yearlyTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:padding="1dp"
                    android:text="₱ 0.0"
                    android:layout_margin="5dp"
                    android:textColor="#ccf1f8"
                    android:textSize="25dp"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/dateYearly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="Date"
                    android:layout_margin="5dp"
                    android:textColor="#ccf1f8"
                    android:textStyle="italic"
                    android:textAlignment="textStart" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

    </LinearLayout>
</layout>